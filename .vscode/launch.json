{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "occtAddon_windows",
            "program": "node",
            "cwd": "${workspaceFolder}",
            "args": [
                "addon.js"
            ],
            "sourceFileMap": {
                "c:\\ws": "${workspaceFolder}\\thirdparty\\nodesrc"
            },
            "symbolOptions": {
                "searchPaths": [
                    "C:\\Program Files\\nodejs",
                    "${workspaceFolder}\\thirdparty\\nodepdb"
                ],
                "searchMicrosoftSymbolServer": false,
                "cachePath": "%TEMP%\\symcache",
            },
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "occtAddon_linux",
            "program": "/usr/local/bin/node",
            "cwd": "${workspaceFolder}",
            "args": [
                "addon.js"
            ],
            "sourceFileMap": {
                "/home/iojs/build/ws/out": "${workspaceFolder}\\thirdparty\\nodesrc"
            },
            "symbolOptions": ${config:test},
        }
    ]
}